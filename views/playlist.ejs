<% include ./partials/header.ejs %>
    <div class="right h-full flex-1 flex gap-3 relative px-6 pt-8">
        <div class="about-playlist shrink-0 h-[95%] bg-zinc-300 w-[24vw] rounded-xl p-7 overflow-y-auto">
            <img class="h-[26vh] rounded-xl w-full bg-red-500 mb-3" src="" alt="">
            <h1 class="text-3xl font-bold"><%=playlist.title%></h1>
            <h4 class="mt-5 font-medium"><%=playlist.user.channelName%></h4>
            <p class="text-zinc-600 text-sm mb-3"><%=playlist.videos.length%> videos <%=playlist.views.length%> views uploaded on <%=playlist.uploadDate.toLocaleDateString('en-US', {
                day:'2-digit',month:'long',year:'2-digit' })%> </p>
            <div class="actions flex gap-2 mb-4">
                <i class="ri-list-check-3 w-10 text-lg flex items-center justify-center bg-[rgba(0,0,0,.7)] text-white aspect-square rounded-full"></i>
                <i class="ri-share-forward-line w-10 text-lg flex items-center justify-center bg-[rgba(0,0,0,.7)] text-white aspect-square rounded-full"></i>
                <i class="ri-download-line w-10 text-lg flex items-center justify-center bg-[rgba(0,0,0,.7)] text-white aspect-square rounded-full"></i>
                <i class="ri-more-2-line w-10 text-lg flex items-center justify-center bg-[rgba(0,0,0,.7)] text-white aspect-square rounded-full"></i>
            </div>
            <a href="/openVideo/<%=playlist.videos[0].title%>"><button class="px-8 py-1.5 bg-white font-medium mr-2 rounded-3xl"><i class="ri-play-fill mr-1 text-xl"></i>Play all</button></a>
            <button class="px-8 py-1.5 bg-white font-medium  rounded-3xl"><i class="ri-shuffle-fill mr-1 text-xl"></i>Shuffle</button>
            <p class="mt-3"><%=playlist.description%></p>

        </div>
        <div class="playlist-videos w-full overflow-y-auto">
            <% playlist.videos.forEach(function(video,i){%>
                <a href="/openVideo/<%=video.title%>">
                <div class="video flex gap-4 relative w-full mb-1 hover:bg-zinc-200 p-1 rounded-xl pl-8">
                    <h1 class="absolute top-1/2 -translate-y-1/2 left-2 font-medium"><%=i+1%></h1>
                    <video class="bg-red-500 rounded-xl w-[11vw] h-[13.5vh]" src=""></video>
                    <div class="video-dets">
                        <h1 class="font-medium text-[1.1vw] mb-2"><%=video.title%></h1>
                        <h2 class="text-sm text-zinc-700"><%=video.description%></h2>
                    </div>
                    <i class="text-xl ri-more-2-fill absolute top-1/2 -translate-y-1/2 right-2 hidden"></i>
                </div>
            </a>
            <%})%>
            
     
        </div>
   </div>



    <% include ./partials/footer.ejs %>
 